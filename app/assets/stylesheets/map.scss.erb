html, body, div {
  padding: 0;
  border: 0;
  margin: 0;
}

#map-wrapper {
  width: 1024px;
  margin: 0 auto 0 auto;
}

#map-header {
  padding: 8px;
  background-color: #C34500;
  color: #FFFFFF;
  font-family: Gudea, sans-serif;
  font-size: 14px;
  text-align: center;
}

#map-footer {
  padding: 8px;
  background-color: #C34500;
  color: #FFFFFF;
  font-family: Gudea, sans-serif;
  font-size: 12px;
  text-align: center;
}

#map {
  height: 512px;

  // Style Google Map InfoWindow
  div.gm-style-iw {
    color: #373737;
    font-family: Gudea, sans-serif;

    h1 {
      margin: 0;
      font-size: 16px;
      font-weight: bold;
    }
    
    h2 {
      margin: 4px 0 0 0;
      font-size: 12px;
    }

    h3 {
      margin: 8px 0 0 0;
      color: #999999;
      font-size: 11px;
    }

    a {
      color: #C34500;
      text-decoration: none;
      font-size: 16px;
      font-weight: bold;
    }

    a:hover {
      color: #993600;
    }

    p {
      margin: 3px 0 0 0;
      padding: 0;
    }
  }
}

#clear {
  margin: 4px;
  border: solid #CCC 1px;
  border-radius: 2px;
  padding: 4px;
  background-color: #FFFFFF;
  color: #666666;
  text-align: center;
  font-family: Arial, sans-serif;
  font-weight: bold;
  font-size: 12px;
  cursor: pointer;
}

#clear:hover {
  color: #222222;
}
