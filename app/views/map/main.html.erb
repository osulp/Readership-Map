<div id="map-wrapper">
  <div id="map-header"><%= ENV['RM_HEADER_TEXT'] || 'Readership Map' %></div>
  <div id="map"></div>
  <div id="map-footer">
  <%=
    if ENV['RM_FOOTER_TEXT'] && ENV['RM_LAST_UPDATED']
      ENV['RM_FOOTER_TEXT'] + ' â€” Last updated ' + ENV['RM_LAST_UPDATED']
